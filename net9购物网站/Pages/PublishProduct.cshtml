@page
@model net9购物网站.Pages.PublishProductModel
@{
    ViewData["Title"] = "发布商品";
}

<h1>发布商品</h1>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div>
        <label for="name">商品名称:</label>
        <input type="text" id="name" name="Product.Name" required />
    </div>
    <div>
        <label for="description">商品描述:</label>
        <textarea id="description" name="Product.Description" required></textarea>
    </div>
    <div>
        <label for="price">价格:</label>
        <input type="number" id="price" name="Product.Price" step="0.01" required />
    </div>
    <div>
        <label for="ImageFile">商品图片:</label>
        <input type="file" id="ImageFile" name="ImageFile" accept="image/*" required />
    </div>
    <button type="submit">发布</button>
</form>
    <a href="/showgoods">返回</a>

@if (Model.Message != null)
{
    <p>@Model.Message</p>
}
